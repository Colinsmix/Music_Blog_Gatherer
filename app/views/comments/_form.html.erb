<%= simple_form_for [@blog, @comment] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :body, :autofocus => true, label_html: {class: "formfont"} %>
    <%= f.input :anonymous, as: :radio_buttons, label_html: {class: "formfont"} %>
  </div>

  <div class="form-actions centerbutton">
    <%= f.button :submit, "Post Comment", class: 'btn dark' %>
  </div>
<% end %>
