<% content_for(:title) do %>New Blog<% end %>

<%= simple_form_for @blog do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :autofocus => true, label: 'Blog Title' %>
    <%= f.input :url, :required => true, label: 'Website Address' %>
    <%= f.input :description, label: 'Please write a short description.' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create Blog" %>
  </div>
<% end %>
