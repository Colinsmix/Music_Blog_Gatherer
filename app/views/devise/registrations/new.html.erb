<h2>Sign up</h2>
<% content_for(:title) do %>Sign Up<% end %>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, :autofocus => true, placeholder: 'Your First Name (Optional)' %>
    <%= f.input :last_name, placeholder: 'Your Last Name (Optional)' %>
    <%= f.input :email, :required => true, placeholder: 'Your Email Address' %>
    <%= f.input :password, :required => true, placeholder: 'Choose a Password' %>
    <%= f.input :password_confirmation, :required => true, placeholder: 'Please Re-enter Your Password' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

