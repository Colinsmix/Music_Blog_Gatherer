<h1> Comments for <%= @blog.name %></h1>

<table id="comments">
  <thead>
    <tr>
      <th>Comment</th>
      <th>User</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= comment.anonymous ? "Anonymous" : comment.user.email %>
        <td><%= link_to 'Edit your Comment', edit_blog_comment_path(comment.blog, comment) if comment.user == current_user %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add a Comment', new_blog_comment_path(@blog) %>
