<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<table id="responsive" class='togglehide'>
<thead>
  <tr>
    <th width='250'><%= sortable "name", "Name" %></th>
    <th width='200'>Tags</th>
    <th width='100'></th>
    <th width='300'></th>
  </tr>
</thead>
<tbody>
  <% @blogs.each do |blog| %>
    <tr>
      <td><%= link_to "#{blog.name}", "http://#{blog.url}" %></td>
      <td><%= blog.tag_list %></td>
      <% if user_signed_in? %>
        <td>
          <div data-blog-id='<%= blog.id %>' class="unfavorite <%= 'show' if blog.check_favorite?(current_user.id) %>" onclick='unfavoriteBlog(event)'><a href="#" class="btn dark"><span class="favoritebutton"></span></a></div>
          <div data-blog-id='<%= blog.id %>' class="favorite <%= 'show' if !blog.check_favorite?(current_user.id) %>" onclick='favoriteBlog(event)'><a href="#" class="btn dark">Favorite</a></div>
        </td>
        <td>
          <div data-blog-id='<%= blog.id %>' class="liking button like <%= 'success' if current_user.voted_up_on? blog %> " onclick='likeBlog(event)'>Like <%= blog.likes.size %></div>
          <div data-blog-id='<%= blog.id %>' class="liking button dislike <%= 'success' if current_user.voted_down_on? blog %>" onclick='dislikeBlog(event)'>Dislike <%= blog.dislikes.size %></div>
        </td>


    <% end %>
    </tr>
  <% end %>
</tbody>
</table>
<div class="digg_pagination pagination togglehide">
    <%= will_paginate @blogs, :container => false %>
  </div>
