<div class="siteheader"><h2>Sign in</h2></div>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, placeholder: 'Your Email Address', label_html: {class: 'formfont' } %>
    <%= f.input :password, :required => false, placeholder: 'Please Enter Your Password Here', label_html: {class: 'formfont' } %>
    <%= f.input :remember_me, :as => :boolean, label_html: {class: 'formfont' } if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions centerbuttonsignin">
    <%= f.button :submit, 'Sign In Now', class: 'btn dark' %>
  </div>
<% end %>
<br><br>

<div class='formfont'><%= render "devise/shared/links" %></div>
